<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/constraintLayout"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Fragments.PlaceholderFragment">
    <android.support.v7.widget.LinearLayoutCompat android:layout_width="wrap_content"
                                                  android:layout_height="990dp"
                                                  tools:ignore="MissingConstraints"
                                                  tools:layout_editor_absoluteY="29dp"
                                                  tools:layout_editor_absoluteX="0dp"
                                                  android:weightSum="4"
    >


        <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:ignore="MissingConstraints"
                android:layout_weight="1"
                android:text="@string/minus"
                android:textSize="30dp"
        />

        <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                                                     android:id="@+id/tv"
                                                     android:layout_height="700sp"
                                                     android:background="@color/colorPrimary"
                                                     android:textSize="40dp"
                                                     android:text="erregergegre"
                                                     android:textColor="@color/colorPrimary"
                                                     android:layout_weight="2"/>
        <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:layout_weight="1"
                android:text="@string/plus"
                android:textSize="30dp"
        />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.constraint.ConstraintLayout>